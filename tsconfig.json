{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "strictNullChecks": true,
    // "maxNodeModuleJsDepth": 50,
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "es2017",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
    // "allowSyntheticDefaultImports": true,
    // "noEmit": true,
    "newLine": "lf",
    // "watch": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
